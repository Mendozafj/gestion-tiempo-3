<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Hábitos</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <header>
    <h1>Gestión del Tiempo</h1>
    <nav>
      <a href="/dashboard">Dashboard</a>
      <a href="/auth/logout">Cerrar sesión</a>
    </nav>
  </header>

  <div class="container">
    <h1>Lista de Hábitos</h1>
    <a href="/habits/new" class="button">Crear Nuevo Hábito</a>
    <!-- Botón para ver los hábitos del usuario actual -->
    <a href="/users/<%= user.id %>/habits" class="button">Ver mis hábitos</a>
    <!-- Botón para ver los hábitos sin actividades realizadas -->
    <a href="/habits/habits-without-activities" class="button">Ver hábitos sin actividades realizadas</a>

    <ul>
      <% habits.forEach(habit=> { %>
        <li>
          <strong>
            <a href="/habits/<%= habit.id %>">
              <%= habit.name %>:
            </a>
          </strong>
          <%= habit.description %>
            <br>
            <a href="/habits/<%= habit.id %>/edit" class="button">Editar</a>
            <form action="/habits/<%= habit.id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="delete">Eliminar</button>
            </form>
            <!-- Botón para agregar el hábito al usuario -->
            <form action="/users/<%= user.id %>/habits/<%= habit.id %>" method="POST" style="display:inline;">
              <button type="submit" class="add">Agregar a mis hábitos</button>
            </form>
        </li>
        <% }); %>
    </ul>

    <!-- Botón para regresar a la vista principal -->
    <div class="back-to-home">
      <a href="/dashboard" class="button">Regresar a la página principal</a>
    </div>
  </div>
</body>

</html>